@model Ventas.Web.Models.Requests.UserCreateRequest;
@{
    Layout = "_Layout_User";
}


<div class="col-4 mt-5">
    <form class="row g-3 needs-validation d-flex flex-column align-items-center" novalidate action="http://localhost:5205/api/users" method="post">
    <div class="input-group">
            <span class="input-group-text bg-info text-white">Nombre completo</span>
            <input type="text" aria-label="Name" asp-for="nombreCompleto" class="form-control rounded-3" id="createUserName" required>
            <div class="invalid-feedback">
                Escribe un nombre válido.
            </div>
    </div>
    <div class="input-group">
            <span class="input-group-text bg-info text-white">Correo</span>
            <input type="email" aria-label="Email" asp-for="correo" class="form-control rounded-3" id="createUserEmail" required>
            <div class="invalid-feedback">
                Escribe un email válido.
            </div>
    </div>
    <div class="input-group">
        <span class="input-group-text bg-info text-white">Contraseña</span>
            <input type="password" aria-label="Password" asp-for="clave" class="form-control rounded-3" id="createUserPassword" required>
            <div class="invalid-feedback">
                Escribe una contraseña válida.
            </div>
    </div>
    <div class="container d-flex gap-5 align-items-center mb-5">
             <div class="col-6">
                <select class="form-select" aria-label="Default select example" id="createUserRole" asp-for="idRol" required>
                    <option selected disabled value="">Open this select menu</option>
                    <option value="2">Empleado</option>
                    <option value="3">Supervisor</option>
                    <option value="1">Administrador</option>
                </select>
                <div class="invalid-feedback">
                    Selecciona un rol válido.
                 </div>
             </div>
            <div class="form-check form-switch col-4 d-flex justify-content-center align-items-center gap-3">
                <input class="form-check-input" id="createUserStatus" type="checkbox" role="switch" asp-for="esActivo">
                <label class="form-check-label h5 p-0" for="flexSwitchCheckDefault">Activo</label>
            </div>
     </div>
     <div class="col-4">
            <button type="submit" class="btn btn-info col-12 rounded-3 text-white" asp-controller="User" asp-action="CreateUser">Crear usuario</button>
     </div>
    </form>
</div>